@model Company;

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gradient bg-secondary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create" ) Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-area="Admin" asp-action="Upsert" asp-controller="Company" method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden/>
            <div class="row">
                <div class="col-12">
                    <div class="border border-0 border-primary p-3 mt-4">
                        <div class="row pb-2">
                        </div>

                        @* <div asp-validation-summary="All" class="text-danger"></div> *@

                        <div class="col-12 form-floating py-2">
                            <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-12 form-floating py-2">
                            <input asp-for="PhoneNumber" type="text" class="form-control border-0 shadow" />
                            <label asp-for="PhoneNumber" class="ms-2"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-12 form-floating py-2">
                            <input asp-for="StreetAddress" type="text" class="form-control border-0 shadow" />
                            <label asp-for="StreetAddress" class="ms-2"></label>
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>

                        <div class="col-12 form-floating py-2">
                            <input asp-for="City" type="text" class="form-control border-0 shadow" />
                            <label asp-for="City" class="ms-2"></label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-12 form-floating py-2">
                            <input asp-for="State" type="text" class="form-control border-0 shadow" />
                            <label asp-for="State" class="ms-2"></label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>

                        <div class="col-12 form-floating py-2">
                            <input asp-for="PostalCode" type="text" class="form-control border-0 shadow" />
                            <label asp-for="PostalCode" class="ms-2"></label>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                       
                        <div class="row justify-content-center mt-4 ">
                            <div class="col-6 col-md-5">


                                @if (Model.Id == 0)
                                {
                                    <button type="submit" class=" btn btn-primary  form-control rounded">
                                        Create
                                    </button>

                                }
                                else
                                {

                                    <button type="submit" class=" btn btn-primary  form-control rounded">
                                        Update
                                    </button>

                                }

                            </div>
                            <div class="col-6 col-md-5">
                                <a asp-controller="Company" asp-action="Index"
                                   class="btn btn-outline-primary  form-control rounded">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
            
        </form>
    </div>
</div>




@section Scripts {
    <script>
            tinymce.init({
          selector: 'textarea',
          plugins: ['anchor','autolink','charmap','codesample','emoticons','lists','table','visualblocks','wordcount'],
          toolbar: 'undo redo | blocks | bold italic underline | link | align | bullist numlist | removeformat',
        });

    </script> 
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}