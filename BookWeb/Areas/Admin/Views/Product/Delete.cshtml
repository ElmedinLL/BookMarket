@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gradient bg-secondary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row ">
            <input asp-for="Id" hidden />
            <div class="border border-0 border-primary p-3 mt-4">
                <div class="row pb-2">
                </div>

                @* <div asp-validation-summary="All" class="text-danger"></div> *@

                <div class="col-12 form-floating py-2">
                    <input asp-for="Title" type="text"  disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="col-12 form-floating py-2">
                    <textarea asp-for="Description" type="text" disabled class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>

                <div class="col-12 form-floating py-2">
                    <input asp-for="ISBN" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="col-12 form-floating py-2">
                    <input asp-for="Author" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                </div>

                <div class="col-12 form-floating py-2">
                    <input asp-for="ListPrice" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="col-12 form-floating py-2">
                    <input asp-for="Price" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>

                <div class="col-12 form-floating py-2">
                    <input asp-for="Price50" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>
                </div>
                <div class="col-12 form-floating py-2">
                    <input asp-for="Price100" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2"></label>
                </div>
                <div class="row justify-content-center mt-4 ">
                    <div class="col-6 col-md-5">
                        <button type="submit"
                                class="btn btn-danger  form-control rounded">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-5">
                        <a asp-controller="Product" asp-action="Index"
                           class="btn btn-outline-primary  form-control rounded">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}