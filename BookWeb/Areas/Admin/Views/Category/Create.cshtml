@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gradient bg-secondary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row ">
            <div class="border border-0 border-primary p-3 mt-4">
                <div class="row pb-2">
                
                   
                </div>

                @* <div asp-validation-summary="All" class="text-danger"></div> *@

                <div class="col-12 form-floating py-2">
                    <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12 form-floating py-2">
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row justify-content-center mt-4 ">
                    <div class="col-6 col-md-5">
                        <button type="submit"
                                class=" btn btn-primary  form-control rounded">
                            Create
                        </button>
                    </div>
                    <div class="col-6 col-md-5">
                        <a asp-controller="Category" asp-action="Index"
                           class="btn btn-outline-primary  form-control rounded">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
@{
  <partial name="_ValidationScriptsPartial"/>
}
}