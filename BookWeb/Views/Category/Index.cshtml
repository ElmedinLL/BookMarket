@model List<Category>



<div class="container">
    <div class="row pt-3 pb-3">
        <div class="col-6">
            <h2>Cateogry List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" 
               class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Category
            </a>
        </div>
    </div>
    <table class="table table-secondary table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                   
                    <td>
                        <div class="w-100 btn-group">
                            <a asp-controller="Category" asp-action="Edit"
                            asp-route-id="@obj.Id"
                               class="btn btn-dark w-50 mx-3">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                        <a asp-controller="Category" asp-action="Delete"
                               asp-route-id="@obj.Id" class="btn btn-danger w-50 ">
                            <i class="bi bi-trash3-fill"></i>
                            Remove
                        </a>
                        </div>
                    </td>
            
                </tr>
            }
        </tbody>
    </table>
</div>